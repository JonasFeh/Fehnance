<Window
    x:Class="FinanceOverviewApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/svg"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
    xmlns:viewModel="clr-namespace:FinanceOverviewApp.MVVM.ViewModel"
    Width="920"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <d:WindowChrome.WindowChrome>
        <d:WindowChrome
            CaptionHeight="43"
            CornerRadius="25,25,10,10"
            GlassFrameThickness="0"
            ResizeBorderThickness="6" />
    </d:WindowChrome.WindowChrome>

    <Border Background="#252732">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="75" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Rectangle
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Fill="#16181f"
                MouseDown="TitleBar_MouseDown" />

            <StackPanel
                x:Name="TitleBar"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <Button Background="#16181f" BorderBrush="#16181f">
                    <Button.Content>
                        <fa:SvgAwesome
                            Width="30"
                            Height="20"
                            Icon="Regular_WindowMinimize"
                            PrimaryColor="White" />
                    </Button.Content>
                </Button>
                <Button Background="#16181f" BorderBrush="#16181f">
                    <Button.Content>
                        <fa:SvgAwesome
                            Width="30"
                            Height="20"
                            Icon="Regular_WindowMaximize"
                            PrimaryColor="White" />
                    </Button.Content>
                </Button>
                <Button Background="#16181f" BorderBrush="#16181f">
                    <Button.Content>
                        <fa:SvgAwesome
                            Width="30"
                            Height="20"
                            Icon="Solid_Xmark"
                            PrimaryColor="White" />
                    </Button.Content>
                </Button>

            </StackPanel>

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="/Fonts/#Poppins"
                FontSize="22"
                Foreground="White"
                Text="Finanzübersicht" />

            <RadioButton
                Grid.Row="2"
                Height="50"
                Command="{Binding HomeViewCommand}"
                Content="Home"
                FontSize="14"
                Foreground="White"
                IsChecked="True"
                Style="{StaticResource MenuButtonTheme}" />

            <RadioButton
                Grid.Row="3"
                Height="50"
                Command="{Binding BankBalanceViewCommand}"
                Content="Giro"
                FontSize="14"
                Foreground="White"
                Style="{StaticResource MenuButtonTheme}" />

            <RadioButton
                Grid.Row="4"
                Height="50"
                Command="{Binding StockViewCommand}"
                Content="Stocks"
                FontSize="14"
                Foreground="White"
                Style="{StaticResource MenuButtonTheme}" />

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="250"
                Height="40"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Style="{StaticResource ModernTextBox}" />

            <ContentControl
                Grid.Row="2"
                Grid.RowSpan="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=RowDefinitions.Count, Mode=OneWay}"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}" />

        </Grid>

    </Border>

</Window>
