<UserControl
    x:Class="FinanceOverviewApp.MVVM.View.BankBalanceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:FinanceOverviewApp.MVVM.ViewModel"
    x:Name="WindowBankActivity"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:BankBalanceViewModel />
    </UserControl.DataContext>
    <StackPanel>

        <StackPanel Margin="10,0,0,10" Orientation="Horizontal">
            <Border
                x:Name="BorderBankActivity"
                Width="1500"
                Height="500">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Offset="0.0" Color="#05052e" />
                        <GradientStop Offset="1" Color="#050f2e" />
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry
                        RadiusX="10"
                        RadiusY="10"
                        Rect="0,0,1500,500" />
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <Button
                            Width="200"
                            Height="40"
                            Margin="20,20,5,5"
                            HorizontalAlignment="Left"
                            Background="#0d1c4d"
                            BorderBrush="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Background}"
                            Command="{Binding ImportBankActivities}"
                            Content="Import Bank Activities"
                            FontFamily="/Fonts/#Poppins"
                            FontSize="14"
                            Foreground="White">
                            <Button.Clip>
                                <RectangleGeometry
                                    RadiusX="10"
                                    RadiusY="10"
                                    Rect="0,0,200,40" />
                            </Button.Clip>
                        </Button>
                        <ListBox
                            Width="{Binding Path=ActualWidth, ElementName=BorderBankActivity}"
                            Margin="10,20,20,10"
                            Background="#0d1c4d"
                            BorderBrush="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Background}"
                            ItemTemplate="{StaticResource BankActivityDataTemplate}"
                            ItemsSource="{Binding BankActivities}" />
                    </StackPanel>
                </Grid>

            </Border>

        </StackPanel>
    </StackPanel>
</UserControl>
