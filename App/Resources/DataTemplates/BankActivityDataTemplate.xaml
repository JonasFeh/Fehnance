<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Fonts/#Poppins" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    <DataTemplate x:Key="BankActivityDataTemplate">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Path=TransactionDate}" />
                <TextBlock Grid.Column="1" Text="{Binding Path=BankAccountIban}" />
                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Path=TransactionVolume.Value}" />
                    <TextBlock Margin="5" Text="{Binding Path=TransactionVolume.Symbol}" />
                </StackPanel>
                <TextBlock Grid.Column="3" Text="{Binding Path=TransactionType}" />
                <TextBlock Grid.Column="4" Text="{Binding Path=Description}" />
                <TextBlock Grid.Column="5" Text="{Binding Path=CreditorIban}" />
                <TextBlock Grid.Column="6" Text="{Binding Path=Creditor}" />
                <TextBlock Grid.Column="7" Text="{Binding Path=CreditorSwift}" />
            </Grid>
        </ScrollViewer>
    </DataTemplate>
</ResourceDictionary>